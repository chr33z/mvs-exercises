<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/service_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_description" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="10dp">
		
        <Button 
            android:id="@+id/button_start_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_start_downloads"/>
        
        <Button 
            android:id="@+id/button_kill_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_kill_app"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/label_downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_downloads" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView 
            android:id="@+id/dl_image_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:visibility="gone"/>
        
        <ProgressBar
            android:id="@+id/dl_progressbar_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView 
            android:id="@+id/dl_image_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:visibility="gone"/>
        
        <ProgressBar
            android:id="@+id/dl_progressbar_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView 
            android:id="@+id/dl_image_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:visibility="gone"/>
        
        <ProgressBar
            android:id="@+id/dl_progressbar_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView 
            android:id="@+id/dl_image_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:visibility="gone"/>
        
        <ProgressBar
            android:id="@+id/dl_progressbar_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView 
            android:id="@+id/dl_image_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:visibility="gone"/>
        
        <ProgressBar
            android:id="@+id/dl_progressbar_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    

</LinearLayout>
